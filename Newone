import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import javax.servlet.http.HttpServletResponse;
import java.io.IOException;

@Controller
public class YourController {

    @RequestMapping(value = "/authenticate", method = RequestMethod.POST)
    public void authenticate(Model pModel, Login pLogin, HttpServletResponse response) {
        try {
            this.ssoUserLookupService.save(username, appCode, SsoUserLookupStatus.UNDER_UPGRADATION.getStatus(), uniqueId);
        } catch (Exception e) {
            log.error("Error occurs while sso user lookup save ", e);
            res.setErrorCode(CustomStatusCode.ERROR_107);
            res.setStatus("fail");
            res.setMessage("Use Client Portal with new credentials.");
            return;
        }

        pModel.addAttribute(SSO_WEB_CLIENT_URL, String.format(this.envUtils.getSsoWebClientUrl(), appCode, uniqueId, this.envUtils.getCurrentDateTimestamp()));
        try {
            response.sendRedirect(this.envUtils.getSsoWebClientUrl());
        } catch (IOException e) {
            log.error("Error occurs while redirecting to SSO Web Client URL", e);
        }
    }
}
