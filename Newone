SELECT EXISTS (
    SELECT 1
    FROM employee
    WHERE name = ? AND address = ? AND number = ?
) AS employee_exists;



hahsh


import java.sql.*;

public class EmployeeExistenceCheck {
    public static void main(String[] args) {
        try {
            // Replace with your database connection details
            Connection conn = DriverManager.getConnection("jdbc:your_url", "your_username", "your_password");

            // Prepared statement
            String sql = "SELECT EXISTS (SELECT 1 FROM employee WHERE name = ? AND address = ? AND number = ?) AS employee_exists";
            PreparedStatement pstmt = conn.prepareStatement(sql);

            // Set values for parameters
            String name = "John Doe";
            String address = "123 Main St";
            int number = 123456;
            pstmt.setString(1, name);
            pstmt.setString(2, address);
            pstmt.setInt(3, number);

            // Execute query
            ResultSet rs = pstmt.executeQuery();

            // Check if employee exists
            if (rs.next()) {
                boolean exists = rs.getBoolean("employee_exists");
                if (exists) {
                    System.out.println("Employee exists.");
                } else {
                    System.out.println("Employee does not exist.");
                }
            }

            // Close resources
            rs.close();
            pstmt.close();
            conn.close();
        } catch (SQLException e) {
            e.printStackTrace();
        }
    }
}
