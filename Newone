ajay

import { Component } from '@angular/core';
import { HttpClient } from '@angular/common/http';

@Component({
  selector: 'app-email-checker',
  templateUrl: './email-checker.component.html',
  styleUrls: ['./email-checker.component.css']
})
export class EmailCheckerComponent {
  email: string = '';
  isValid: boolean = false;
  isInvalid: boolean = false;

  constructor(private http: HttpClient) {}

  validateEmail(): void {
    if (this.email) {
      this.http.get<boolean>(`http://localhost:8080/api/email/validate?email=${this.email}`)
        .subscribe(
          response => {
            this.isValid = response;
            this.isInvalid = !response;
          },
          error => {
            this.isValid = false;
            this.isInvalid = true;
          }
        );
    } else {
      this.isValid = false;
      this.isInvalid = false;
    }
  }
}


bitu
<div class="email-checker-container">
  <input
    type="email"
    placeholder="Enter your email"
    [(ngModel)]="email"
    (ngModelChange)="validateEmail()"
    [ngClass]="{ 'is-invalid': isInvalid }"
  />

  <span *ngIf="isValid" class="checkmark valid">&#10003;</span>
  <span *ngIf="isInvalid" class="checkmark invalid">&#10007;</span>

  <div *ngIf="isInvalid" class="error-message">Enter a valid email address</div>
</div>



