<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Form 2</title>
</head>
<body>
  <form id="form2">
    <label for="name">Name:</label>
    <input type="text" id="name2" name="name"><br><br>

    <label for="email">Email:</label>
    <input type="email" id="email2" name="email"><br><br>

    <button type="submit">Submit</button>
  </form>

  <script>
    // Function to extract URL parameters
    function getUrlParams() {
      const params = new URLSearchParams(window.location.search);
      return {
        name: params.get('name'),
        email: params.get('email')
      };
    }

    // Populate form fields with the extracted parameters
    window.onload = function() {
      const params = getUrlParams();
      document.getElementById('name2').value = params.name || '';
      document.getElementById('email2').value = params.email || '';
    };
  </script>
</body>
</html>
